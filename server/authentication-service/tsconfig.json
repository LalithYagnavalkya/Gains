{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./*.js", "src/**/*.ts", "test/**/*.ts"]
}
